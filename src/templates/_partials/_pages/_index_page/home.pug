section.home
	.home__bg
		+img(`${assetsPath}/img/home_bg_1.jpg`, '', 'image')
	.home__container.container(data-scroll="", data-scroll-fadeup="")

		.home__anim_spheres
			.wrap.wrap--1 
				.sphere.sphere--1
			.wrap.wrap--2 
				.sphere.sphere--2
			.wrap.wrap--3 
				.sphere.sphere--3
			.wrap.wrap--4 
				.sphere.sphere--4

		.home__anim_arrow 
			+svg("arrow_dropdown", 'icon')

		.section_block.section_block--center 
			h1.section_block__title(data-scroll="", data-scroll-fadeup="") Мы строим #[br] ваши желания
			p.section_block__title.section_block__title--small(data-scroll="", data-scroll-fadeup="") Строительство типовых домов #[br] или по индивидуальному проекту

		.home_tab.home_tab--1(data-scroll="", data-scroll-fadeup="")
			.home_tab__icon
				+imgSvg(`${assetsPath}/img/home_tab_icon_1.svg`, '', 'image') 
			p.home_tab__text Строительство занимает #[br] от 2 месяцев до года
		
		.home_tab.home_tab--2(data-scroll="", data-scroll-fadeup="")
			.home_tab__icon
				+imgSvg(`${assetsPath}/img/home_tab_icon_2.svg`, '', 'image') 
			p.home_tab__text Заселение сразу после #[br] завершения работ

		.home_slider.slider.swiper
			.swiper-wrapper 
				.home_slider__slide.swiper-slide(data-scroll="", data-scroll-fadeup="")
					p.home_tab__text Строительство занимает #[br] от 2 месяцев до года
				.home_slider__slide.swiper-slide(data-scroll="", data-scroll-fadeup="") 
					p.home_tab__text Заселение сразу после #[br] завершения работ

			.home_slider__pagination.slider__pagination

