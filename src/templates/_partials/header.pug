		.header__line 
			a.header__logo(href="/")
				+imgSvg(`${assetsPath}/img/white_logo.svg`, '', 'image')
			
			nav.header__nav
				a.header__nav_link.header__nav_link--dot(href="#projects") #[.dot] Проекты
